<!DOCTYPE html>
<html>
  <head>
    <title>Travel Guide</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1><%= title %>ðŸ˜Ž</h1>
    <img
      src="<%= image %>"
      alt="image:<%= title %>"
      width="200"
    />
    <h2><%= description %></h2>

    <h2>Activity</h2>
    <ul>
      <% activities.forEach(activity => { %>
      <li><%= activity.description %></li>
      <% }) %>
    </ul>

    <h2>Reviews</h2>
    <form
      action="/api/destinations/<%= id %>/reviews"
      method="GET"
    >
      <label for="rating">Filter by Rating:</label>
      <input
        type="number"
        name="rating"
        min="1"
        max="5"
        value="<%= reviews.forEach(review => {review.rating}) %>"
        placeholder="All"
      />
      <button type="submit">Filter</button>
    </form>
    <ul>
      <% reviews.forEach(review => { %>
      <li>
        <b>Rating:</b><%= review.rating %> - <%=
        review.comment%><br />
        <form
          action="/api/reviews/<%= review.id %>/edit"
          method="GET"
          style="display: inline"
        >
          <button>Edit</button>
        </form>
        <form
          action="/api/reviews/<%= review.id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button>Delete</button>
        </form>
      </li>
      <br />
      <% }) %>
    </ul>
    <h3>Add a Review</h3>
<form action="/api/reviews/" method="POST">
  <input type="hidden" name="destinationId" value="<%= id %>" />

  <label for="rating">Rating:</label>
  <input type="number" name="rating" min="1" max="5" required />

  <label for="comment">Comment:</label>
  <input type="text" name="comment" required />

  <button type="submit">Submit Review</button>
</form>
  </body>
</html>
